{
	"Logging": {
		"LogLevel": {
			"Default": "Debug",
			"System": "Information",
			"Microsoft": "Information"
		}
	},
	"NLog": {
		"throwConfigExceptions": true,
		"targets": {
			"async": true,
			"logfile": {
				"type": "File",
				"maxArchiveDays": 15,
				"fileName": "${basedir}/Logs/${shortdate}.log",
				"encoding": "utf-8",
				"layout": "${date:format=HH\\:mm\\:ss} ${callsite:includeNamespace=False} | ${level} | ${message:exceptionSeparator=\r\n:withException=true}"
			},
			"console": {
				"type": "ColoredConsole",
				"layout": "${date:format=HH\\:mm\\:ss} ${callsite:includeNamespace=False} | ${level} | ${message:exceptionSeparator=\r\n:withException=true}"
			},
			"debugSystem": {
				"type": "DebugSystem",
				"layout": "${date:format=HH\\:mm\\:ss} ${callsite:includeNamespace=False} | ${level} | ${message:exceptionSeparator=\r\n:withException=true}"
			}
		},
		"rules": {
			"0": {
				"logger": "*", 
				"minLevel": "Trace", 
				"writeTo": "debugSystem"
			}, 
			"1" :{
				"logger": "*", 
				"minLevel": "Warn", 
				"writeTo": "logfile"
			}
		}
	}
}