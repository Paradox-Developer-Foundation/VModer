{
	"name": "vmoder",
	"displayName": "VModer - HOI4 Language Server",
	"description": "A HOI4 language server",
	"author": "textGamex",
	"license": "Apache-2.0",
	"version": "0.3.0",
	"preview": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/textGamex/VModer"
	},
	"icon": "./logo.png",
	"publisher": "textGamex",
	"categories": ["Programming Languages"],
	"l10n": "./l10n",
	"keywords": [
		"hoi4",
		"language server"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:hoi4"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "VModer configuration",
			"properties": {
				"VModer.GameRootPath": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "%VModer.GameRootPath%"
				},
				"VModer.RamQueryIntervalTime": {
					"scope": "resource",
					"type": "number",
					"default": 1500,
					"description": "%VModer.RamQueryIntervalTime%"
				}
			}
		},
		"commands": [
			{
				"command": "vmoder.openLogs",
				"title": "Open VModer Logs Folder"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "npm install",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"@types/vscode": "^1.75.1",
		"@vscode/test-electron": "^2.3.9",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	}
}
